<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_white"
    tools:context=".presentation.sdm.editpassword.EditPasswordActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_v2" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_white_10dp"
        android:layout_margin="@dimen/_16dp"
        android:padding="@dimen/_16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_old_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/cl_grey_2"
            app:passwordToggleEnabled="true"
            app:boxStrokeWidth="0.5dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_old_pass"
                style="@style/tv16inter_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Password Lama"
                android:maxLines="1"
                android:inputType="textPassword"
                android:padding="12dp"
                android:paddingStart="0dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_new_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24dp"
            app:boxStrokeColor="@color/cl_grey_2"
            app:passwordToggleEnabled="true"
            app:boxStrokeWidth="0.5dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_new_pass"
                style="@style/tv16inter_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Password Baru"
                android:maxLines="1"
                android:inputType="textPassword"
                android:padding="12dp"
                android:paddingStart="0dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_konfirm_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24dp"
            app:boxStrokeColor="@color/cl_grey_2"
            app:passwordToggleEnabled="true"
            app:boxStrokeWidth="0.5dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tie_konfirm_pass"
                style="@style/tv16inter_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Konfirmasi Password Lama"
                android:maxLines="1"
                android:inputType="textPassword"
                android:padding="12dp"
                android:paddingStart="0dp" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:text="@string/simpan"
        android:background="@drawable/bg_orange_10dp"
        android:textColor="@color/white"
        android:paddingVertical="@dimen/_14dp"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:layout_marginBottom="@dimen/_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>