<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelTotalPartner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tv10spe15352_avenir_heavy"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginStart="@dimen/_18dp"
            android:text="JUMLAH PARTNER"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textTotalPartner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tv24sp404040_avenir_heavy"
            android:text="201"
            app:layout_constraintTop_toBottomOf="@id/labelTotalPartner"
            app:layout_constraintStart_toStartOf="@id/labelTotalPartner"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelPartner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tv13spa1a4af_avenir_heavy"
            android:layout_marginTop="@dimen/_12dp"
            app:layout_constraintStart_toEndOf="@id/textTotalPartner"
            app:layout_constraintTop_toBottomOf="@id/labelTotalPartner"
            android:text="partner"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageGrafik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_grafik"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginEnd="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tv8sp7a7b7c_avenir_heavy"
            android:text="LIHAT GRAFIK"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/imageGrafik"
            app:layout_constraintStart_toStartOf="@id/imageGrafik"
            app:layout_constraintEnd_toEndOf="@id/imageGrafik"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>