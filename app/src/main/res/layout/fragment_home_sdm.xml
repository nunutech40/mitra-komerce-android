            <!--            android:layout_marginStart="24dp"-->
            <!--            android:text="@string/ask"-->
            <!--            android:textColor="@color/colorAsk"-->
            <!--            android:textSize="16sp"-->
            <!--            app:layout_constraintStart_toStartOf="parent"-->
