<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textInvoiceNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="No. Invoice 192381123"
        style="@style/tv12sp000000_avenir_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textInvoiceDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="25 Januari 2020"
        style="@style/tv12sp000000_avenir_medium"
        app:layout_constraintBaseline_toBaselineOf="@+id/textInvoiceNumber"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textPartnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Partner"
        style="@style/tv14sp000000_avenir_heavy"
        app:layout_constraintStart_toStartOf="@+id/textInvoiceNumber"
        app:layout_constraintTop_toBottomOf="@+id/textInvoiceNumber" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CATEGORY A"
        style="@style/tv12spDE4D4E_avenir_heavy"
        app:layout_constraintStart_toStartOf="@+id/textPartnerName"
        app:layout_constraintTop_toBottomOf="@+id/textPartnerName" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textInvoiceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judul Invoice"
        style="@style/tv16sp000000_avenir_heavy"
        android:layout_marginBottom="@dimen/_10dp"
        app:layout_constraintStart_toStartOf="@+id/textCategoryName"
        app:layout_constraintTop_toBottomOf="@+id/textCategoryName"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>