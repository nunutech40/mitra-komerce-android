<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_12dp"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtNoPartnerAndName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/tv16sp000000_avenir_heavy"
        android:text="06 - Petrus"
        android:layout_marginTop="@dimen/_12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelLeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEADER : "
        style="@style/tv10sp47B989_avenir_heavy"
        app:layout_constraintTop_toBottomOf="@id/txtNoPartnerAndName"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/txtLeaderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Namanya"
        android:textAllCaps="true"
        android:layout_marginStart="4dp"
        style="@style/tv10sp000000_avenir_heavy"
        app:layout_constraintBaseline_toBaselineOf="@+id/labelLeader"
        app:layout_constraintStart_toEndOf="@+id/labelLeader" />

</androidx.constraintlayout.widget.ConstraintLayout>