<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_12dp"
    android:paddingVertical="12dp"
    android:layout_marginHorizontal="@dimen/_16dp"
    android:paddingHorizontal="@dimen/_16dp"
    android:background="@drawable/bg_white_10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_leads_title"
        style="@style/tv16inter_med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Leads 1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/desc_time"
        style="@style/tv16inter_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waktu: "
        android:layout_marginTop="8dp"
        android:textColor="@color/cl_grey_dark_tx_new"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_leads_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_time"
        style="@style/tv16inter_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="00:00"
        app:layout_constraintStart_toEndOf="@+id/desc_time"
        app:layout_constraintTop_toTopOf="@+id/desc_time"
        app:layout_constraintBottom_toBottomOf="@+id/desc_time"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_date"
        style="@style/tv12inter_reg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/cl_grey_dark_tx_new"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_leads_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sabtu, 01 Mei 2021" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/desc_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_leads_title"
        app:srcCompat="@drawable/ic_trash_rf" />
</androidx.constraintlayout.widget.ConstraintLayout>