<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tx_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/_14sp"
        android:text="text date"
        android:textColor="@color/cl_black"
        android:fontFamily="@font/publicsans_regular"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:paddingHorizontal="@dimen/_12dp"
        android:background="@drawable/bg_white_10dp"
        android:layout_marginTop="@dimen/_6dp"
        app:layout_constraintTop_toBottomOf="@+id/tx_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/ll_profle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/txtStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/my_profile_aktif_button"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tx_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textColor="@color/cl_black"
                    android:textSize="@dimen/_16sp"
                    android:fontFamily="@font/publicsans_bold"/>
                <TextView
                    android:id="@+id/tx_no_partner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nomor_partner"
                    android:textColor="@color/cl_grey_dark"
                    android:textSize="@dimen/_14sp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:fontFamily="@font/publicsans_regular"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_profle">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp"
                        android:text="@string/text_total_poin"
                        android:textColor="@color/cl_grey_dark"
                        android:textSize="@dimen/_14sp"
                        android:fontFamily="@font/publicsans_regular"
                        />

                    <TextView
                        android:id="@+id/tx_total_poin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6dp"
                        android:paddingVertical="@dimen/_10dp"
                        android:text="0 Point"
                        android:textColor="@color/cl_orange"
                        android:textSize="@dimen/_18sp"
                        android:fontFamily="@font/publicsans_bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/_15sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/text_status"
                        android:textColor="@color/cl_grey_dark"
                        android:textSize="@dimen/_14sp"
                        android:fontFamily="@font/publicsans_regular"/>

                    <TextView
                        android:id="@+id/tx_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6dp"
                        android:background="@drawable/bg_semi_yellow_5dp"
                        android:paddingVertical="10dp"
                        android:text="DIAJUKAN"
                        android:textAlignment="center"
                        android:textColor="@color/cl_yellow"
                        android:textSize="@dimen/_18sp"
                        android:fontFamily="@font/publicsans_bold"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_chevron_right" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>