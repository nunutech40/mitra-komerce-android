<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_14dp"
    android:layout_marginStart="@dimen/_18dp"
    android:layout_marginEnd="@dimen/_18dp"
    app:cardCornerRadius="@dimen/_10dp"
    app:cardElevation="@dimen/_4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSdmNameWithPositionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/tv18sp000000_avenir_heavy"
            android:text="Petrus - Advertiser"
            android:layout_marginTop="8dp"
            android:layout_marginStart="@dimen/_18dp"
            android:layout_marginEnd="@dimen/_18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tv14spde4d4e_avenir_medium"
            app:layout_constraintTop_toBottomOf="@+id/txtSdmNameWithPositionName"
            app:layout_constraintStart_toStartOf="@+id/txtSdmNameWithPositionName"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_8dp"
            android:text="Durasi 6 Hari"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>