<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10dp"
    app:cardElevation="@dimen/_4dp"
    android:layout_marginHorizontal="@dimen/_18dp"
    android:layout_marginTop="@dimen/_8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_14dp"
        android:paddingHorizontal="@dimen/_24dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtReportDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/tv14sp000000_avenir_heavy"
            android:textColor="#262626"
            android:layout_marginEnd="@dimen/_16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDelete"
            tools:text="Hari Sumpah Pemuda"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtJumlahAndRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/tv10sp000000_avenir_heavy"
            android:textColor="#3FB686"
            tools:text="28 Oktober 2020"
            app:layout_constraintTop_toBottomOf="@id/txtReportDate"
            app:layout_constraintStart_toStartOf="@id/txtReportDate"
            app:layout_constraintEnd_toEndOf="@id/txtReportDate"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4dp"
            app:srcCompat="@drawable/ic_edit_orange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4dp"
            app:srcCompat="@drawable/ic_delete_orange"
            app:layout_constraintEnd_toStartOf="@+id/btnEdit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>