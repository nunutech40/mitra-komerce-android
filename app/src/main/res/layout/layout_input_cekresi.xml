<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#fff"
    app:layout_constraintHeight_max="350dp"
    app:layout_constraintHeight_min="300dp"
    app:layout_constrainedHeight="true"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        android:maxHeight="350dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_searchResi"
            android:hint="Cari berdasarkan nama atau nomor resi.."/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tv_error_resi"
            android:textAlignment="center"
            android:layout_margin="60dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="gone"
            android:id="@+id/rec_resultSearchResi"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/rec_riwayat_resi"/>
        <LinearLayout
            android:id="@+id/lay_btn_cekResi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">
            <ImageView
                android:id="@+id/im_donecekResi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_done_pick" />

            <com.kusu.loadingbutton.LoadingButton
                android:id="@+id/btn_cekResi"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Cek Resi"
                android:textColor="@color/white"
                app:lb_buttonColor="@color/colorPrimary"
                app:lb_isShadowEnable="false"
                app:lb_shadowHeight="5dp"  />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>