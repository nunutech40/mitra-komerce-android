<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#313131">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/textLokasi"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_12dp"
                    android:layout_marginStart="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/shape_skeleton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/txtCoworkName"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_14dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/shape_skeleton"
                    app:layout_constraintStart_toStartOf="@+id/textLokasi"
                    app:layout_constraintTop_toBottomOf="@id/textLokasi" />

                <View
                    android:id="@+id/txtLabelStatus"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_skeleton"
                    app:layout_constraintStart_toStartOf="@+id/textLokasi"
                    app:layout_constraintTop_toBottomOf="@id/txtCoworkName" />

                <View
                    android:id="@+id/txtStatus"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_14dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/shape_skeleton"
                    app:layout_constraintStart_toStartOf="@+id/textLokasi"
                    app:layout_constraintTop_toBottomOf="@id/txtLabelStatus" />

                <View
                    android:id="@+id/textInformasi"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_skeleton"
                    app:layout_constraintStart_toStartOf="@+id/textLokasi"
                    app:layout_constraintTop_toBottomOf="@id/txtStatus" />

                <View
                    android:id="@+id/txtInformasi"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_14dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/_16dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/shape_skeleton"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnCheckIn"
                    app:layout_constraintStart_toStartOf="@id/textInformasi"
                    app:layout_constraintTop_toBottomOf="@id/textInformasi" />

                <View
                    android:id="@+id/btnCheckIn"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_24dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/shape_skeleton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgCoworkingSpace"
        android:layout_width="@dimen/_81sdp"
        android:layout_height="@dimen/_81sdp"
        android:layout_marginStart="11dp"
        android:src="@drawable/coworking_space"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>