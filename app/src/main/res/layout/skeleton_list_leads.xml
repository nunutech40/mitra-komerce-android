<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_16dp"
    android:layout_marginTop="@dimen/_12dp"
    android:background="@drawable/bg_white_10dp"
    android:paddingHorizontal="@dimen/_16dp"
    android:paddingVertical="12dp">

    <View
        android:id="@+id/tv_leads_title"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_16dp"
        android:background="@drawable/shape_skeleton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/desc_time"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_skeleton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_leads_title" />


    <View
        android:id="@+id/tv_date"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_16dp"
        android:background="@drawable/shape_skeleton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Sabtu, 01 Mei 2021" />

    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_16dp"
        android:background="@drawable/shape_skeleton"
        app:layout_constraintBottom_toBottomOf="@+id/desc_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_leads_title" />
</androidx.constraintlayout.widget.ConstraintLayout>